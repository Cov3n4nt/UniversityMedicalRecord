@page
@model UniversityMedicalRecord.Pages.CreateAdmin.IndexModel

@{
    ViewData["Title"] = "Create Admin";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">

<head>
    <title>Create Admin</title>
</head>

<body>
<section class="vh-100" style="background-color: #0072A0;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-mb-5 col-lg-5 d-none d-md-block">
                            <img src="https://img.freepik.com/free-vector/admin-concept-illustration_114360-2332.jpg?w=740&t=st=1683473535~exp=1683474135~hmac=ce016de988ef0d7a47c93003846362a25b7da5a727499b4da85b1978b6313974"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        
                        <div class="col-md-4 col-lg-6 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-4 text-black">
                        
                                <form method="post">
                                    <h5 class="fw-normal mb-2 pb-2" style="letter-spacing: 1px;">Create Admin</h5>
                                    
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline mb-1 w-75">
                                        <label asp-for="FirstName" class="control-label"></label>
                                        <input asp-for="FirstName" class="form-control"/>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline md-1 w-75">
                                        <label asp-for="MiddleName" class="control-label"></label>
                                        <input asp-for="MiddleName" class="form-control"/>
                                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-1 w-75">
                                        <label asp-for="LastName" class="control-label"></label>
                                        <input asp-for="LastName" class="form-control"/>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-1 w-75">
                                        <label asp-for="Username" class="control-label"></label>
                                        <input asp-for="Username" class="form-control"/>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-1 w-75">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    &nbsp;

                                    <div class="form-outline mb-1 w-75">
                                        <input type="submit" value="Create" class="btn btn-primary"/>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




</body>
</html>